#!/usr/bin/env ruby

$:.unshift File.dirname(__FILE__) + "/../lib"

data_dir = File.dirname(__FILE__) + "/../data"
require 'fileutils'
FileUtils.mkdir_p(data_dir)

if ARGV.empty?
  puts "Usage: seed MIRROR_URL"
  puts "  will seed and print urls that have been found."
  exit(1)
end

require 'mirror_list'
list = MirrorList.new(data_dir, ARGV.first)

puts "Fetching mirrors..."
list.refresh

list.each do |mirror|
  puts mirror
end